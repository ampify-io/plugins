{
  "name": "root",
  "private": true,
  "workspaces": ["packages/*"],
  "devDependencies": {
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
