{
  "name": "root",
  "private": true,
  "scripts": {
    "version": "lerna version",
    "build": "lerna run --parallel build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "version": "1.0.0"
}
